<% include ../partials/header %>

<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>No Judgement Zone</h1>
			<p>Share With Other. Care to Each Other</p>
			<a href="/campgrounds/new"><button type="button" class="btn btn-success btn-lg">Tell Your Story</button></a>
		</div>
	</header>
	<div class="row text-center indexImage" style="display:flex;flex-wrap:wrap">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                <%console.log(campground.image)%>
                   <div class="caption">
                       <h4><%= campground.name %></h4>
                   </div>
                   <p>
                       <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
        <% }); %>
		</div>
	</div>
<% include ../partials/footer %>
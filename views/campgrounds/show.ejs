<% include ../partials/header%>
<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">No Judgement Zone</p>
			<div class="list-group">
				<li class="list-group-item active">Story</li>
				<h3>Total Comments : <%=commentCount%> </h3>
			</div>
		</div>
		<div class="col-md-9">
			<div class="thumbnail">
				<div class="caption-full">
					<h4><a><%= campground.name%></a></h4>
					<p><%=campground.description%></p>
					<p>
						<em>Submitted by: <a href="/biodata/<%=campground.author.id%>"><%= campground.author.username %></a>, <%= moment(campground.createdAt).fromNow() %></em>
					</p>
					<%if(currentUser){%>
						<% if(campground.author.id.equals(currentUser._id) || currentUser._id.equals("59febe24cbb24828842a9780")){%>
							<a class="btn btn-warning" href="/story/<%=campground._id%>/edit">Edit</a>
							<form class="delete-form" action="/story/<%=campground._id%>?_method=DELETE" method="POST">
							<button class="btn btn-danger" >Delete</button>
						</form>
						<% } %>
					<% } %>
				</div>
			</div>
			<div class="well">
				<div class="text-right">
					<a class="btn btn-default" href="/story/<%=campground._id%>/comments/new">Add a new comment</a>
				</div>
				<hr>
					<%campground.comments.forEach(function(comment){ %>
					<div class="row">
						<div class="col-md-12">
							<strong><%=comment.author.username%></strong>
							<span class="pull-right"><%= moment(comment.createdAt).fromNow() %></span>
						</div>
					</div>
					<p><%=comment.text%></p>
					<%if(currentUser){%>
					<% if(comment.author.id.equals(currentUser._id) || currentUser._id.equals("59febe24cbb24828842a9780")){%>
					<a class="btn btn-warning" href="/story/<%=campground._id%>/comments/<%=comment._id%>/edit">Edit</a>
						<form class="delete-form" action="/story/<%=campground._id%>/comments/<%=comment._id%>
						?_method=DELETE" method="POST">
						<button class="btn btn-danger" >Delete</button>
					</form>
					<%}%>
					<%}%>
					<% }) %>
			</div>
		</div>
	</div>
</div>


<% include ../partials/footer%>